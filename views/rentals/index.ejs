<h2>Szukaj wypożyczeń</h2>
<form action="/rentals" method="GET">
	<label>Tytuł</label>
	<input
		type="text"
		name="title"
		value="<%=searchOptions.game||searchOptions.mail%>"
	/>
	<button type="submit">Szukaj</button>
</form>
<br />
<div class="container-rentals">
	<div>Gra</div>
	<div>ID klienta</div>
	<div>Data wypożyczenia</div>
	<div>Data zwrotu</div>
	<div>Zwrot</div>
</div>
<% rentals.forEach(rental=>{%>
<div class="container-rentals">
	<div>
		<a href="/games/<%=rental.game.id%>"><%=rental.game.title%></a>
	</div>
	<div>
		<a href="/customers/<%=rental.customer%>"><%=rental.customer%></a>
	</div>

	<div><%=rental.date.toISOString().split('T')[0]%></div>

	<div><%=rental.dateOfReturn.toISOString().split('T')[0]%></div>
	<div>
		<%-include('../partials/deleteForm',{url:`/rentals/${rental.id}`})%>
	</div>
</div>
<%})%>
